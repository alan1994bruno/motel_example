@page "/clientes-penalizados"
@using Motel.Models
@using Motel.Services
@inject ClientService ClientService
@inject NavigationManager NavManager

<div class="header-actions">
    <div>
        <h2 class="page-title" style="color: #c62828;">CLIENTES PENALIZADOS</h2>
        <p class="page-subtitle">Usuários com pendências financeiras ou restrições</p>
    </div>
    <div class="actions-right">
        <span class="badge-total">Total: <strong>@totalClients</strong></span>
    </div>
</div>

<div class="table-container">
    @if (isLoading)
    {
        <div style="padding: 60px; text-align: center; color: #666;">
            <h3>⌛ Buscando penalidades...</h3>
        </div>
    }
    else if (clients == null || !clients.Any())
    {
        <div style="padding: 40px; text-align: center; color: #2e7d32;">
            <strong>Tudo limpo!</strong><br />
            Nenhum cliente penalizado no momento.
        </div>
    }
    else
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Email do Cliente</th>
                    <th>CPF</th>
                    <th>Data da Multa</th>
                    <th>Valor Devido</th>
                    <th style="text-align: right;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in clients)
                {
                    <tr class="penalty-row">
                        <td>
                            <span style="color: #c62828; font-weight: bold;">&#9888;</span>
                            @item.Email
                        </td>

                        <td>@(item.Profile?.Cpf ?? "---")</td>

                        <td>
                            @if (item.Penalty != null)
                            {
                                @item.Penalty.CreatedAt.ToString("dd/MM/yyyy")
                            }
                            else
                            {

                                <span>-</span>
                            }
                        </td>

                        <td>
                            @if (item.Penalty != null)
                            {
                                <strong style="color: #c62828;">R$ @item.Penalty.Price.ToString("F2")</strong>
                            }
                        </td>

                        <td class="action-col">
                            @if (item.Penalty != null)
                            {
                                <button class="btn-resolve" @onclick="() => AbrirModalConfirmacao(item.Penalty.PublicId)">
                                    Resolver
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="pagination">
    <span class="page-info">Página @(paginaAtual + 1) de @(totalPaginas == 0 ? 1 : totalPaginas)</span>
    <div class="page-buttons">
        <button disabled="@(paginaAtual == 0)" @onclick="PaginaAnterior">❮ Anterior</button>
        <button disabled="@(paginaAtual >= totalPaginas - 1)" @onclick="ProximaPagina">Próxima ❯</button>
    </div>
</div>

@if (showModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3 style="color: #c62828;">Resolver Pendência?</h3>
            <p>Tem certeza que deseja remover esta penalidade? <br /> Esta ação não pode ser desfeita.</p>

            <div class="modal-buttons">
                <button class="btn-cancel" @onclick="FecharModal">Cancelar</button>
                <button class="btn-confirm" @onclick="ConfirmarResolucao">Sim, Resolver</button>
            </div>
        </div>
    </div>
}

@code {
    private List<ClientUser> clients;
    private int totalClients = 0;
    private int paginaAtual = 0;
    private int totalPaginas = 1;
    private bool isLoading = true;

    // Variáveis para controle do Modal
    private bool showModal = false;
    private string selectedPenaltyId = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CarregarDados();
            StateHasChanged();
        }
    }

    private async Task CarregarDados()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var result = await ClientService.GetPenalizedClientsPageAsync(paginaAtual);

            if (result != null)
            {
                clients = result.Content;
                totalClients = result.TotalElements;
                totalPaginas = result.TotalPages;
            }
            else
            {
                clients = new List<ClientUser>();
            }
        }
        catch (Exception)
        {
            clients = new List<ClientUser>();
        }
        finally
        {
            isLoading = false;
        }
    }

    // --- Lógica do Modal ---

    private void AbrirModalConfirmacao(string penaltyId)
    {
        selectedPenaltyId = penaltyId;
        showModal = true;
    }

    private void FecharModal()
    {
        showModal = false;
        selectedPenaltyId = null;
    }

    private async Task ConfirmarResolucao()
    {
        if (!string.IsNullOrEmpty(selectedPenaltyId))
        {
            // 1. Chama a API para deletar
            await ClientService.RemovePenaltyAsync(selectedPenaltyId);

            // 2. Fecha o modal
            FecharModal();

            // 3. Atualiza a tabela (Puxa os dados de novo)
            await CarregarDados();
        }
    }

    // --- Paginação ---
    private async Task ProximaPagina()
    {
        if (paginaAtual < totalPaginas - 1)
        {
            paginaAtual++;
            await CarregarDados();
        }
    }

    private async Task PaginaAnterior()
    {
        if (paginaAtual > 0)
        {
            paginaAtual--;
            await CarregarDados();
        }
    }
}

