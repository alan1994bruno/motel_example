@page "/editar-cliente/{Id}"
@using Motel.Models
@using Motel.Services
@inject ClientService ClientService
@inject NavigationManager NavManager

<div class="back-link" @onclick='() => NavManager.NavigateTo("clientes")'>
    <span>←</span> Voltar
</div>

<div class="header-section">
    <h2 class="page-title">EDITAR CLIENTE</h2>
    <p class="page-subtitle">Alterando dados do cadastro ID: <strong>#@Id</strong></p>
</div>

@if (isLoading)
{
    <div style="text-align:center; padding: 50px;">
        <div class="spinner"></div>
        <p>Carregando dados...</p>
    </div>
}
else
{
    <div class="form-card">
        <h4 class="card-title">👤 DADOS DE ACESSO</h4>

        <div class="form-row">
            <div class="form-group" style="flex: 1;">
                <label>Email</label>
                <input type="text" @bind="email" class="form-input" placeholder="email@exemplo.com" />
            </div>

            <div class="form-group" style="flex: 1;">
                <label>Nova Senha <small>(🔒)</small></label>
                <input type="password" @bind="password" class="form-input" placeholder="........" />
                <small class="hint">Preencha apenas se desejar alterar a senha.</small>
            </div>
        </div>
    </div>

    <div class="form-card">
        <h4 class="card-title">📄 DADOS PESSOAIS</h4>

        <div class="form-row">
            <div class="form-group">
                <label>CPF</label>
                <input type="text" @bind="cpf" class="form-input" placeholder="000.000.000-00" />
            </div>

            <div class="form-group">
                <label>Telefone</label>
                <input type="text" @bind="phone" class="form-input" placeholder="(00) 00000-0000" />
            </div>

            <div class="form-group">
                <label>CEP</label>
                <input type="text" @bind="cep" class="form-input" placeholder="00000-000" />
            </div>
        </div>
    </div>

    <div class="actions-footer">
        <button class="btn-save" @onclick="AbrirModal">💾 SALVAR ALTERAÇÕES</button>
    </div>
}

@if (showModal)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <h3 style="color: #4a148c;">Salvar alterações?</h3>
            <p>Os dados do cliente serão atualizados permanentemente.</p>

            <div class="modal-buttons">
                <button class="btn-cancel" @onclick="FecharModal">Cancelar</button>
                <button class="btn-confirm" @onclick="SalvarDados">Confirmar</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string Id { get; set; }

    private bool isLoading = true;
    private bool showModal = false;

    // Campos do Formulário
    private string email;
    private string cpf;
    private string phone;
    private string cep;
    private string password; // Opcional

    protected override async Task OnInitializedAsync()
    {
        await CarregarCliente();
    }

    private async Task CarregarCliente()
    {
        isLoading = true;
        var client = await ClientService.GetUserClientAsync(Id);

        if (client != null)
        {
           
            email = client.Email;
            cpf = client.Profile?.Cpf ?? "";
            phone = client.Profile?.Phone ?? "";
            cep = client.Profile?.Cep ?? "";
        }
        else
        {
            // Se der erro ou não achar
            await App.Current.MainPage.DisplayAlert("Erro", "Cliente não encontrado", "OK");
            NavManager.NavigateTo("clientes");
        }

        isLoading = false;
    }

    private void AbrirModal() => showModal = true;
    private void FecharModal() => showModal = false;

    private async Task SalvarDados()
    {
        FecharModal();
        isLoading = true; 

        
        var payload = new UpdateUserClientData
        {
            Email = email,
            Cpf = cpf,
            Phone = phone,
            Cep = cep,            
            Password = string.IsNullOrWhiteSpace(password) ? null : password
        };

        var sucesso = await ClientService.UpdateUserClientAsync(Id, payload);

        if (sucesso)
        {
            await App.Current.MainPage.DisplayAlert("Sucesso", "Cliente atualizado com sucesso!", "OK");
            NavManager.NavigateTo("clientes");
        }
        else
        {
            await App.Current.MainPage.DisplayAlert("Erro", "Falha ao atualizar cliente.", "OK");
            isLoading = false;
        }
    }
}

