@page "/clientes"
@using Motel.Models
@using Motel.Services
@inject ClientService ClientService
@inject NavigationManager NavManager

<div class="header-actions">
    <div>
        <h2 class="page-title">GERENCIAR CLIENTES</h2>
        <p class="page-subtitle">Base de usuários cadastrados</p>
    </div>
    <div class="actions-right">
        <span class="badge-total">Total: <strong>@totalClients</strong></span>
    </div>
</div>

<div class="table-container">
    @if (isLoading)
    {
        <div style="padding: 60px; text-align: center; color: #666;">
            <h3>⌛ Carregando clientes...</h3>
        </div>
    }
    else if (clients == null || !clients.Any())
    {
        <div style="padding: 40px; text-align: center;">Nenhum cliente encontrado.</div>
    }
    else
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Usuário / Email</th>
                    <th>CPF</th>
                    <th>Telefone</th>
                    <th>Status</th>
                    <th>Penalidade</th>
                    <th style="text-align: right;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in clients)
                {
                    <tr>
                        <td>
                            <strong>@item.Username</strong><br />
                            <span style="font-size: 0.8rem; color: #888;">@item.Email</span>
                        </td>

                        <td>@(item.Profile?.Cpf ?? "---")</td>
                        <td>@(item.Profile?.Phone ?? "---")</td>

                        <td>
                            @if (item.Enabled)
                            {
                                <span class="badge-active">Ativo</span>
                            }
                            else
                            {
                                <span class="badge-inactive">Bloqueado</span>
                            }
                        </td>

                        <td>
                            @if (item.Penalty != null)
                            {
                                <span class="badge-penalty">Dívida: R$ @item.Penalty.Price.ToString("F2")</span>
                            }
                            else
                            {
                                <span style="color: #ccc;">Nada constada</span>
                            }
                        </td>

                        <td class="action-col">
                            <button class="btn-view" @onclick='() => NavManager.NavigateTo($"editar-cliente/{item.PublicId}")'>👁 Ver</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="pagination">
    <span class="page-info">Página @(paginaAtual + 1) de @(totalPaginas == 0 ? 1 : totalPaginas)</span>
    <div class="page-buttons">
        <button disabled="@(paginaAtual == 0)" @onclick="PaginaAnterior">❮ Anterior</button>
        <button disabled="@(paginaAtual >= totalPaginas - 1)" @onclick="ProximaPagina">Próxima ❯</button>
    </div>
</div>

@code {
    private List<ClientUser> clients;
    private int totalClients = 0;
    private int paginaAtual = 0;
    private int totalPaginas = 1;
    private bool isLoading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CarregarDados();
            StateHasChanged();
        }
    }

    private async Task CarregarDados()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var result = await ClientService.GetClientsPageAsync(paginaAtual);

            if (result != null)
            {
                clients = result.Content;
                totalClients = result.TotalElements;
                totalPaginas = result.TotalPages;
            }
            else
            {
                clients = new List<ClientUser>();
            }
        }
        catch (Exception)
        {
            clients = new List<ClientUser>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ProximaPagina()
    {
        if (paginaAtual < totalPaginas - 1)
        {
            paginaAtual++;
            await CarregarDados();
        }
    }

    private async Task PaginaAnterior()
    {
        if (paginaAtual > 0)
        {
            paginaAtual--;
            await CarregarDados();
        }
    }
}

