@page "/nova-suite"
@inject NavigationManager NavManager

<div class="page-container">
    <header class="navbar">
        <div class="nav-left">
            <h1 class="logo">Motel</h1>
            <nav class="nav-links">
                <a href="dashboard">INÍCIO</a>
                <a href="#">RESERVAS ▾</a>
                <a href="suites" class="active">SUÍTES</a>
                <a href="#">CLIENTES</a>
                <a href="#">CLIENTES PENALIZADOS</a>
            </nav>
        </div>
        <button class="btn-logout" @onclick="Sair">LOGOUT ➜</button>
    </header>

    <main class="content-area">
        <div class="form-card">
            <div class="card-header">
                <button class="btn-back" @onclick="Voltar">←</button>
                <div>
                    <h2 class="form-title">NOVA SUÍTE</h2>
                    <p class="form-subtitle">Preencha todos os campos abaixo.</p>
                </div>
            </div>

            <hr class="divider" />

            <form>
                <div class="row">
                    <div class="col-grow">
                        <label>Nome da Suíte</label>
                        <input type="text" placeholder="Ex: Suíte Master" class="input-field" />
                    </div>
                    <div class="col-fixed">
                        <label>Preço por Hora (R$)</label>
                        <input type="text" placeholder="0,00" class="input-field" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-grow">
                        <label>Unidades Disponíveis</label>
                        <input type="number" placeholder="1" class="input-field" />
                    </div>
                </div>

                <div class="section-title">
                    <span>🖼 IMAGENS DA SUÍTE</span>
                </div>
                <hr class="divider-light" />

                <div class="form-group">
                    <label>URL da Imagem 1 <span class="required">*</span></label>
                    <input type="text" placeholder="https://..." class="input-field" />
                </div>
                <div class="form-group">
                    <label>URL da Imagem 2 <span class="required">*</span></label>
                    <input type="text" placeholder="https://..." class="input-field" />
                </div>
                <div class="form-group">
                    <label>URL da Imagem 3 <span class="required">*</span></label>
                    <input type="text" placeholder="https://..." class="input-field" />
                </div>

                <button type="button" class="btn-save">💾 SALVAR SUÍTE</button>
            </form>
        </div>
    </main>
</div>

@code {
    private void Voltar()
    {
        NavManager.NavigateTo("suites");
    }

    private void Sair()
    {
        NavManager.NavigateTo("/");
    }
}

